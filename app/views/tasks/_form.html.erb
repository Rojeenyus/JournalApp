<%= form_with model: [ @category, @task ] do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>
    <p>
      <%= form.label :deadline %><br>
      <%= form.date_field :deadline %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>