<div class="container">
<div class="d-flex align-items-center">
<%= button_to "<", categories_path, :class => "btn btn-light", :method => "get" %>
<h1><%= @category.name %></h1>
</div>
<div class="btn-group">

<%= button_to "Create Task", new_category_task_path(@category.id), :class => "btn-outline-dark btn", :method => "get" %>

<%= button_to "Edit Category", edit_category_path(@category), :class => "btn-outline-dark btn", :method => "get" %>

<%= button_to "Delete Category", category_path(@category), :class => "btn-outline-dark btn", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>

</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Deadline</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
<%= render @category.tasks %>
</tbody>
</table>
</div>
