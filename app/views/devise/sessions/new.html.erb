<%= render "devise/sessions/navbar" %>
<div class="d-flex justify-content-center">
  <div class="position-absolute top-50 start-50 translate-middle">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Email input -->
      <div class="form-outline mb-4">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <!-- Password input -->
      <div class="form-outline mb-4">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <!-- 2 column grid layout for inline styling -->
      <div class="row mb-4">
        <div class="col d-flex justify-content-center">
          <!-- Checkbox -->
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
            <label class="form-check-label" for="form2Example31"> Remember me </label>
          </div>
        </div>
        <div class="col">
          <!-- Simple link -->
          <a href="#!">Forgot password?</a>
        </div>
      </div>
      <!-- Submit button -->
      <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4", style: "width: 100%" %>
      <!-- Register buttons -->
      <div class="text-center">
        <p>Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
      </div>
    <% end %>
  </div>
</div>
